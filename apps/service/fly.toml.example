# Copy to fly.toml and customize for your self-hosted deployment.
# Run: fly launch (first time) then fly deploy
#
# Replace app name. Add domains via fly certs add; server accepts any host with a cert (no env needed).

app = 'blackhole-yourcompany'
primary_region = 'ord'

[build]

[env]

[http_service]
  internal_port = 8080
  force_https = true
  auto_stop_machines = 'off'
  auto_start_machines = true
  min_machines_running = 1

  [[http_service.checks]]
    interval = '30s'
    timeout = '15s'
    grace_period = '60s'
    method = 'GET'
    path = '/api/health'

[[vm]]
  cpu_kind = 'shared'
  cpus = 1
  memory_mb = 512
