{
  "name": "bhole",
  "version": "0.1.0-alpha.3",
  "type": "module",
  "description": "Self-hostable ngrok alternative - expose local services to the internet",
  "bin": {
    "bhole": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && pnpm run build:dashboard",
    "build:dashboard": "cd dashboard && pnpm install && pnpm run build",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "prerelease": "npm publish --tag alpha",
    "release": "npm publish"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "ink": "^6.7.0",
    "ink-spinner": "^5.0.0",
    "nanoid": "^5.1.6",
    "open": "^11.0.0",
    "react": "^19.2.4",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@blackhole/config-typescript": "workspace:*",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
